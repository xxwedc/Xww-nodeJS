/* pages/mall_Collection/collection.wxss */
page{
  width: 100%;
  height: 100%;
}
.Collection{
  padding-left: 10px;
  display: flex;
  align-items: center;
  font-size: 20px;
  font-weight: 530;
  width: 100%;
  height: 80px;
  background-color: rgb(235, 235, 235);
  
}
.goodsInfo{
  width: 100%;
  height: 180px;
  margin-top: 10px;
}
.goods{
  width: 100%;
  height: 70%;
  padding: 10px;
  display: flex;
  /* align-items: center; */
}
.goodsImgView{
 margin-right: 10px;
}

.goodsImg{
  width: 100px;
  height: 120px;
  overflow: hidden;
}
.goodsDetail{
  width: 220px;
  overflow: hidden;
  margin-left: 10px;
  text-overflow: ellipsis;
}
.goodsDetailTxt{
  /* 显示两行，多出部分省略号 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 14px;
  color: rgb(158, 158, 158);
}
.goodsName{
  font-size: 16px;
  white-space: nowrap;
  overflow: hidden;
}
.goodsPrice{
  display: block;
  margin-top: 10px;
  font-size: 20px;
}
.checkGoods{
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.checkGoodsTxt{
  
  margin-right: 10px;
  /* 下划线 */
  text-decoration:underline;
  font-size: 14px;
  font-weight: 450;
}
.delCollection{
  margin-top: 5px;
  margin-left: 10px;
  /* 下划线 */
  text-decoration:underline;
  font-size: 14px;
  font-weight: 450;
}
.xianView{
  width: 100%;
  display: flex;
  justify-content: center;
}
.xian{
  width: 95%;
  height: 1px;
  background-color: rgb(133, 133, 133);
}

.CollectionNone{
  margin-top: 50%;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  color: rgb(145, 145, 145);
}
.bottomTip{
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: rgb(151, 151, 151);
}