/* pages/shoppingMall/shoppingMall.wxss */
page{
  width: 100%;
  height: 100%;
}
/* ****搜索**** begin*/
.view_search{
  width: 100%;
  display: flex;
  flex-direction: row;
  /* margin-top: 20rpx; */
  /* margin-bottom: 20rpx; */
  align-items: center;
  justify-content: center;
  padding: 2%;
  background-color: rgb(255, 255, 255);
  font-size: 12px;
}
.view_icon_input{
  /* border: 1px solid #d0d0d0; */ 
  width: 100%; 
  border-radius: 24rpx;
  display: flex;
  flex-direction: row;
  background-color: #ebebeb;
  align-items: center;
  /* justify-content: center; */
  
}
.input_search{
  margin-left: 70rpx;
  height: 70rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #8f8f8f;
  /* border-radius: 10px; */
}
.searchcion {
  margin: 0rpx 15rpx 0rpx 15rpx;
  position: absolute;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
/* ****搜索**** end*/
/* 导航栏 */
.banner {
  width: 100%;
  height: 80rpx;
  background: #fff;
  white-space: nowrap;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
}

.banner scroll-view {
  height: 100%;
}

.sort {
  position: relative;
  display: inline-block;
  font-size: 14px;
  color: #6d6a6a;
  margin-right: 70rpx;
  line-height: 80rpx;
  height: 100%;
}

scroll-view .sort:last-child {
  margin-right: 0rpx;
}

.choose {
  font-size: 18px;
  color: #000000;
}

.line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  border-radius: 10rpx;
  background: #fa2500;
  animation: spread .3s;
}
.sendGoodsBtn{
  width: 100%;
  position: fixed;
  bottom: 0px;
}


