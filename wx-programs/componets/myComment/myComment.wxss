/* componets/myComment/myComment.wxss */
.noneComment{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  color: rgb(88, 88, 88);

}
.myCommentTopTip{
  width: 100%;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: rgb(141, 141, 141);

}
.myCommentInfo{
  width: 100%;
  height: 180px;
  background-color: white;
  padding: 10px;
  margin-bottom: 10px;
}
.userCommentInfo{
  display: flex;
  align-items: center;
}
.userMessage{
  margin-left: 10px;
}
.userName{
  display: block;
  font-size: 16px;
  color: rgb(100, 100, 100);
}
.userTime{
  display: block;
  font-size: 10px;
  color: rgb(150, 150, 150);

}
.userImg{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.deleteBtn{
  position: absolute;
  right: 20px;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  /* border: 1px rgb(0, 0, 0) solid; */
  border-radius: 50%;
  overflow: hidden;

}
.deleteBtnImg{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  
}
.commentDetail{
  width: 260px;
  margin: 10px 0px 10px 0px;
  font-size: 16px;
  overflow: hidden;
  /* 超出部分显示省略号 */
  text-overflow:ellipsis;
  white-space: nowrap;
}
.foundInfo{
  width: 100%;
  height: 60px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding-left: 10px;
  font-size: 12px;
  background-color:  rgb(235, 235, 235);
}
.foundUserDetail{
  margin-left: 10px;
}
