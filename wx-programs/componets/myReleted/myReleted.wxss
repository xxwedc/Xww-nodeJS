/* componets/myReleted/myReleted.wxss */
.backG{
  height: 650rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
.releted{
  width: 90%;
  height: 200px;
  border-radius: 12px;
  overflow: hidden;
  background-color: white;
  padding: 5px;
}
.reletedTitle{
  height: 30px;
  font-size: 18px;
  margin-left: 5px;
  font-weight: bolder;
  display: flex;
  align-items: center;
}
.reletedInfo{
  width: 100%;
  height: 150px;
  display: flex;
  justify-content: space-between;
  padding: 10px;
  flex-wrap:wrap;
}
.myInfo{
  width: 70px;
  height: 70px;
  text-align: center;
  margin-top: 5px;
  font-size: 12px;
  color: rgb(126, 129, 133);
}
.myInfoImg{
  width: 30px;
  height: 30px;
}
