/* componets/car_detail/car_detail.wxss */
.CarTop{
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.topTip{
  font-size: 14px;
  color: rgb(148, 148, 148);
  margin-left: 15px;
  margin-top: 10px;
}
.CarTxt{
  display: block;
  color: black;
  font-size: 18px;
  font-weight: 650;
}
.delCar{
  font-size: 14px;
  margin-right: 15px;
  color: rgb(252, 47, 47);
  /* 下划线 */
  text-decoration:underline;
}
.carBg{
  width: 100%;
  display: flex;
  justify-content: center;
}
.carInfo{
  width: 90%;
  height: 120px;
  border-radius: 12px;
  background-color: white;
  display: flex;
  align-items: center;
  padding: 10px;
  margin-top: 20px;
}
.imgInfo{
  width: 80px;
  height: 100%;
  border-radius: 14px;
  overflow: hidden;
  margin-left: 10px;
}
.goodsImg{
  border-radius: 14px;
  height: 100%;
}
.goodsDetailInfo{
  margin-left: 10px;
}
.goodsName{
  font-size: 14px;
  height: 20px;
  width: 140px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsDetail{
  width: 140px;
  height: 32px;
  /* 显示两行，多出部分省略号 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12px;
  color: rgb(158, 158, 158);
}
.priceInfo{
  margin-top: 10px;
  font-size: 12px;

}
.price{
  color: red;
  font-size: 16px;
}
.bottomTip{
  width: 100%;
  height: 150px;
  text-align: center;
  font-size: 14px;
  padding-top: 25px;
  color: rgb(148, 148, 148);
}
.car_bar{
  width: 100%;
  height: 80px;
  bottom: 0px;
  background-color: white;
  position: fixed;
  display: flex;
  padding: 0px 10px 20px 20px ;
  align-items: center;
  justify-content: space-between;
}
.allCheckBox{
  display: flex;
  align-items: center;
  font-size: 12px;
  color: rgb(126, 126, 126);
}
.buyInfo{
  display: flex;
  font-size: 14px;
  align-items: center;
  justify-content: center;
}
.priceSum{
  font-size: 14px;
}
.sum{
  font-size: 18px;
  color: red;
}
.buy{
  width: 100px;
  height: 40px;
  margin-left: 10px;
  font-size: 16px;
  font-weight: 550;
  letter-spacing:5px;
  background-image: linear-gradient(to right, #f9d423 0%, #ff4e50 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20px;
}