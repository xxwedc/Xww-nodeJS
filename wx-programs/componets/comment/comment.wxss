/* componets/comment/comment.wxss */
.title{
  font-size: 14px;
  background: #efefef;
  height: 23px;
  line-height: 23px;
  padding-left: 10px;
}
.commnetsList{
  height: 78px;
  border-bottom: 1px solid #efefef;
  display: flex;
  padding: 8px 2px;
}
.headerImg{
  width: calc(50*750rpx/320);
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.commentsInfo{  
  flex:1;
  height: 100%;
  overflow: hidden;
}
.headerImgBox{
  width:calc(30*750rpx/320);
  height: calc(30*750rpx/320);
  overflow: hidden;
  border-radius: 50%;
  position: relative;
  top:8px;
}
.img{
  width: 100%;
  height: 100%;
}
.name{
  font-size: 14px;
  color: gray;
}
.time{
  font-size: 12px;
  color: gray;
}
.content{
  color: #333;
  font-size: 14px;
  margin-top: 5px;
}