/* componets/goods_List/goods_List.wxss */
.goodsBG {
  padding: 15px;
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.goodsInfo {
  width: 48%;
  height: 100%;
  margin-top: 20px;
}
.imgInfo{
  width: 100%;
  height: 200px;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.goodsImg {
  width: 100%;
}

.detailInfo {
  font-size: 12px;
  margin-left: 5px;
  font-weight: 550;
  margin-top: 5px;
}
.priceInfo{
  font-size: 12px;
  color: rgb(218, 180, 55);
  margin-top: 5px;
}
.price{
  color: black;
  font-size: 16px;
  font-weight: 660;
}