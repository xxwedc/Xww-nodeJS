/* componets/mall_myGoods/myGoods.wxss */
.myGoodsTitle{
  font-size: 16px;
  font-weight: 550;
  margin: 10px 0px 10px 10px;
}
.info{
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.carBg{
  width: 100%;
  display: flex;
  justify-content: center;
}
.carInfo{
  width: 90%;
  height: 120px;
  border-radius: 12px;
  background-color: white;
  display: flex;
  align-items: center;
  padding: 10px;
  margin-top: 20px;
}
.imgInfo{
  width: 80px;
  height: 100px;
  border-radius: 14px;
  overflow: hidden;
  margin-left: 10px;
}
.goodsImg{
  border-radius: 14px;
  height: 100%;
}
.goodsDetailInfo{
  margin-left: 10px;
}
.goodsName{
  font-size: 14px;
  height: 20px;
  width: 140px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsDetail{
  width: 140px;
  height: 32px;
  /* 显示两行，多出部分省略号 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12px;
  color: rgb(158, 158, 158);
}
.priceInfo{
  margin-top: 10px;
  font-size: 12px;

}
.price{
  color: red;
  font-size: 16px;
}
.btnInfo{
  margin-left: 30px;
}
.edit{
  text-align: center;
  border: 1px #4b4b4b solid;
  font-size: 12px;
  border-radius: 8px;
  margin-bottom: 5px;
  width: 60px;
}
.delete{
  text-align: center;
  border: 1px #686767 solid;
  color: rgb(255, 59, 59);
  font-size: 12px;
  border-radius: 8px;
  margin-top: 10px;
  width: 60px;
}