/* componets/goods_bar/goods_bar.wxss */
.barBG{
  width: 100%;
  height: 80px;
  background-color: white;
  display: flex;
  justify-content: space-around;
  padding: 10px;
  align-items: center;
}
.modular{
  font-size: 14px;
}
.iconImg{
  display: block;
  width: 25px;
  height: 25px;
}
.addCar{
  width: 90px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  text-align: center;
  border-radius: 16px;
  border: 1px #b4b4b4 solid;
}
.buyNow{
  width: 90px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  text-align: center;
  border-radius: 16px;
  background-color: gold;

}
