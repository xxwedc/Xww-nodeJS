.mallbg{
  height: 80px;
  width: 100%;
  margin-bottom: 30px;
  display: flex;
  justify-content: center;
}
.mallInfo{
  background-color: white;
  border-radius: 12px;
  width: 90%;
  height: 100%;
  padding: 5px;
}
.malltitle{
  height: 30px;
  font-size: 16px;
  margin-left: 5px;
